<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceBlock name="breeze.js">
            <arguments>
                <argument name="bundles" xsi:type="array">
                    <item name="default" xsi:type="array">
                        <item name="items" xsi:type="array">
                            <!-- Input mask -->
                            <item name="Swissup_BreezeExamples/js/input-mask" xsi:type="array">
                                <item name="path" xsi:type="string">Swissup_BreezeExamples/js/input-mask</item>
                                <item name="load" xsi:type="array">
                                    <item name="onReveal" xsi:type="array">
                                        <item name="form-create-account" xsi:type="string">.form-create-account</item>
                                    </item>
                                </item>
                            </item>
                            <item name="vanillaTextMask" xsi:type="array">
                                <item name="path" xsi:type="string">https://unpkg.com/vanilla-text-mask@5.1.1/dist/vanillaTextMask.js</item>
                                <item name="global" xsi:type="string">vanillaTextMask</item>
                                <item name="load" xsi:type="array">
                                    <item name="onRequire" xsi:type="boolean">true</item>
                                </item>
                            </item>
                        </item>
                    </item>
                </argument>
            </arguments>
        </referenceBlock>
    </body>
</page>
